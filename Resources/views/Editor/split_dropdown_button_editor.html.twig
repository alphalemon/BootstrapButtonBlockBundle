{% extends "BootstrapButtonBlockBundle:Button:dropdown_button_params.html.twig" %}

{% block body %}
<div data-title="Dropdown split button" rel="popover" data-html="true" data-content='{% include "BootstrapButtonBlockBundle:Editor:_dropdown_editor.html.twig" %}' class="al_inline_editable popover-zindex btn-group{{ button_dropup }}">
    <button class="btn{{ button_type }}{{ button_attribute }}">{{ button_text }}</button>
    <button class="btn{{ button_type }}{{ button_attribute }} dropdown-toggle" data-toggle="dropdown">
    <span class="caret"></span>
    </button>
    <ul class="dropdown-menu{{ button_dropup_right }}">
        {% include "BootstrapButtonBlockBundle:Item:_dropdown_items.html.twig" with {'items': attributes} %}
    </ul>
</div>
{% endblock %}